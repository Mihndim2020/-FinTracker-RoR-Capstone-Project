<% provide(:title, "Groups") %>
<div class="container justify-content-center d-flex ">
    <div class="card my-5" style="width: 18rem;">
        <%=image_tag(icon_url_for_group(@group), style:"border-radius:1rem;")%>
        <div class="card-body crd-bdy">
            <h5 class="card-title text-center mb-5"> <%= @group.name %></h5>
            <p class="m-0">Expenses:</p>
        </div>
        <ul class="list-group list-group-flush">
            <% @group.expenditures.each do |expenditure| %>
            <li class="list-group-item d-flex justify-content-between" style="font-size:13px;">
                <span class="d-flex flex-column"> <small class="text-muted">Name:</small> <%=expenditure.name%></span>
                <span class="d-flex flex-column"><small class="text-muted">Duration:</small><%=expenditure.amount%> hrs</span>
                <span class="d-flex flex-column"><small class="text-muted">Author:</small><%=expenditure.author.name%></span>
                <%= display_eye(expenditure)%>
            </li>
            <% end %>
        </ul>
        <div class="card-body text-center">
            <%= link_to 'javascript:history.back()', class:"card-link text-decoration-none" do %>
            <i class="bi bi-arrow-left-square text-dark"></i>
            <%=display_modify(@group)%>
            <% end %>
        </div>
    </div>
</div>


<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @group.user_id %>
</p>

<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
