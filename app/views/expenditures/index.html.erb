<% provide(:title, "Expenditures") %>
<div class="total-task d-flex flex-column px-2 position-relative">
    <div class="task-total fw-bold  d-flex justify-content-center align-items-center mt-1 mb-4">
        <span class="me-2 h5">
            Expenses: <%=@expenditures.count%>
        </span>
       
    </div>
    <div class = "d-flex flex-row justify-content-between">
      <p class = "h5">
      Total Amount:
      </p>
      <p class = "h5">
       <%= total_expenses(@expenditures) %>
      </p>  
    </div>
    <%= render 'expenditure' %>
    <div class="container d-flex flex-column justify-content-center align-items-center">
        <%=  link_to 'javascript:history.back()', class:"card-link text-decoration-none my-3" do %>
        <i class="bi bi-arrow-left-square text-dark"></i>
        <% end %>
    </div>
    <div class="new-expenditure-btn text-center bg-succes d-flex align-items-center justify-content-center">
        <%= link_to 'New Expenditure', new_expenditure_path, class:'btn btn-outline-primary text-dark text-decoration-none new-task' %>
    </div>
</div>